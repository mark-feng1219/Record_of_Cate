
<view>
    <!-- Tab布局 -->
    <view class='navBox'>
        <view class='titleBox' bindtap='titleClick' data-idx='0'>
            <text class="{{0 == currentIndex ? 'fontColorBox' : ''}}">关注</text>
            <hr class="{{0 == currentIndex ? 'lineBox' : 'notLineBox'}}" />
        </view>
        <view class='titleBox' bindtap='titleClick' data-idx='1'>
            <text class="{{1 == currentIndex ? 'fontColorBox1' : ''}}">推荐</text>
            <hr class="{{1 == currentIndex ? 'lineBox' : 'notLineBox'}} " />
        </view>

        
    </view>
    <!-- 内容布局 -->
    <swiper class='swiperTtemBox' bindchange='pagechange' current='{{currentIndex}}'>
        <swiper-item class='swiperTtemBox'>
            <!-- <view>装备内容</view> -->

   <scroll-view class="scroll-box" scroll-x="true">
          <view class="box" wx:for="{{pushs}}" wx:for-item="push">
            <view class="head">
              <image 
              class="head" 
              src="{{push.headportrait}}"
              bindtap="gotoHomePage" data-url="{{push.homepage}}"></image>
            </view>
          </view>
      </scroll-view>
      
  <scroll-view scroll-y="true"  style="height: {{ windowHeight }}px; width: {{ windowWidth }}px;" bindscrolltolower="loadMore" >
    <view wx:for="{{followpushs}}" wx:for-item="followpush" wx:key="" >
      <history cover_image="{{followpush.cover_image}}" 
      title="{{followpush.name}}" 
      cover_image_default="{{followpush.cover_image_default}}"
      name="{{followpush.desc}}"></history>
          </view>
      </scroll-view>


        </swiper-item>
        <swiper-item class='swiperTtemBox'>
        <view class="city_history">
      
      <view class="history_content">
      
      <scroll-view scroll-y="true"  style="height: {{ windowHeight }}px; width: {{ windowWidth }}px;" bindscrolltolower="loadMore" >
        <view class="left">
          <view wx:for="{{trips}}" wx:for-item="trip" wx:key="" wx:if="{{index%2==0}}">
            <history cover_image="{{trip.cover_image}}" 
      title="{{trip.name}}" 
      cover_image_default="{{trip.cover_image_default}}"
      name="{{trip.desc}}" note_id="13494579" user_id="953463"></history>
          </view>
        </view>

        <view class="right">
          <view wx:for="{{trips}}" wx:for-item="trip" wx:key="" wx:if="{{index%2==1}}">
    <history cover_image="{{trip.cover_image}}" 
      title="{{trip.name}}" 
      cover_image_default="{{trip.cover_image_default}}"
      name="{{trip.desc}}" note_id="13494579" user_id="953463"></history>
          </view>
        </view>
      </scroll-view>

      </view>
      
  </view>
</swiper-item>

    </swiper>
</view>
