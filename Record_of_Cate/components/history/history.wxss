.history_item{
  display: inline-block;
  background:#fff;
  margin-bottom: 20px;
  border-radius: 10px;
  width:100%;
}
.item-img{
  width:100%;
  border-radius: 10px 10px 0 0 ;
}
.item-title{
  padding:10px;
  font-size: 14px;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
}
.item-ava{
  width: 35px;
  height: 35px;
  border-radius: 100%;
  float:left;
  margin-right:10px;
}
.history_auth_name{
  padding:0 0 10px 10px;
}
.name-title{
  font-size:12px;
  color: #1e1e1e;
  display: block;
  box-sizing: border-box;
  position: relative; 
  top: 22rpx;
  left: 0rpx;
}
.boxgood{
  display: block;
  padding:0 0 10px 10px;
  position: relative;
  box-sizing: border-box;
  bottom: 20rpx;
  float: right;
  margin-right: 10%;
}
.good{
  display: block;
  position: relative;
  box-sizing: border-box;
  width: 20px;
